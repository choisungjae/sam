package control_p;

public class Zam2 {

	public static void main(String[] args) {
		
		int am=2000,asi=3000,af=4000;
		String cu="커피";
		int amsu =3,asisu=1,afsu=2;
		int total= (am*amsu)+(asi*asisu)+(af*afsu);
		System.out.println(total);
		
		if(total>=10000) {
			System.out.println("배달가능");
		}else if(total>=8000) {
			System.out.println("포인트추가");
		}else {System.out.println("기본");}
	
		
		
	    
		
		
		
		
		
		//아메2000
		//아시아노 3000
		//아프리카노4000
		//10000이상이면 배달가능 / 8000이상이면 포인트추가,미만이면 기본

	}

}
