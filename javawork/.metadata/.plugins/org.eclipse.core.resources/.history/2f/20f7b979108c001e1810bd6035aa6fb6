			now.set(Calendar.DATE, j);
			  
			String pre = "", sur=" ";
			if(j<10) {
				pre+=" ";
			}
			if(nowDD==j) {
				pre+="[";
				sur="]";
			}else {
				pre+=" ";	
			}
			sur+=" ";
			System.out.print(pre+j+sur);
			
	
			if(now.get(Calendar.DAY_OF_WEEK)==7) {
		           System.out.print("\t\t\t");}
		}}
