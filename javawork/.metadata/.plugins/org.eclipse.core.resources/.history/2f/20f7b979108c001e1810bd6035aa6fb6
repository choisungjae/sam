			}
		    System.out.println();
		    
	                       //여기부터시작 
		now.set(Calendar.DATE, 1);
		int first = now.get(Calendar.DAY_OF_WEEK);
		//System.out.println(first);
		for (int i = 1; i <first; i++) {                            //달에 첫 주가 시작될떄 써먹어야함 
			System.out.print("     ");
		}
		int last = now.getActualMaximum(Calendar.DATE);
